<!-- views/index.ejs -->
<div class="campaign-row row">
    <h3 class="text-center">You may be interested in...</h3>
    <% campaigns.forEach((campaign) => { %>
      <div class="col-sm-3 home-campaign-box">
        <img src="<%= campaign.image %>">
        <div class="campaign-info-wrapper">
          <a class="title" href="/campaigns/<%= campaign._id %>">
            <strong><%= campaign.title %></strong>
          </a><br>
          by <span class="light-text"><%= campaign._creator.username %></span><br>
          <span class="light-text description"><%= campaign.description %></span>
        </div>
      </div>
    <%  }) %>
  </div>
